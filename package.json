{
  "name": "reactnative",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npx metro serve --port 8081",
    "clean": "npx metro serve --port 8081 --reset-cache",
    "android": "npx react-native run-android",
    "ios": "npx react-native run-ios",
    "bundle:android": "npx metro build index.js --platform android --dev false --out android/app/src/main/assets/index.android.bundle",
    "bundle:clean": "npx metro serve --port 8081 --reset-cache",
    "android-clean": "cd android && .\\gradlew clean && cd ..",
    "android-deep-clean": "cd android && .\\gradlew clean && .\\gradlew cleanBuildCache && cd ..",
    "pre-release": "rmdir /s /q android\\app\\src\\main\\assets 2>nul & mkdir android\\app\\src\\main\\assets",
    "release": "npm run pre-release && npm run bundle:android && npm run android-clean && cd android && .\\gradlew assembleRelease",
    "release-fresh": "npm run pre-release && npm run bundle:android && npm run android-deep-clean && cd android && .\\gradlew assembleRelease",
    "release-safe": "npm run pre-release && npm run bundle:android && npm run android-clean && cd android && .\\gradlew clean && .\\gradlew assembleRelease --stacktrace",
    "release-crash-free": "call build-crash-free-release.bat",
    "release-production": "call build-production-release.bat",
    "release-ultimate": "call build-ultimate-stable.bat",
    "release-debug-like": "call build-debug-like-release.bat",
    "test-release": "call test-release-build.bat",
    "release-no-crash": "call build-no-crash.bat",
    "release-ultra-stable": "call build-ultra-stable.bat",
    "release-new": "call build-new-release.bat",
    "diagnose-crash": "call diagnose-crashes.bat",
    "diagnose-release": "call diagnose-release-crash.bat",
    "lint": "eslint .",
    "test": "jest",
    "doctor": "npx react-native doctor",
    "device-check": "adb devices",
    "restart-adb": "adb kill-server && adb start-server",
    "logs": "adb logcat | findstr ReactNativeJS",
    "debug-logs": "adb logcat *:E",
    "fresh-start": "taskkill /f /im node.exe 2>nul && npx react-native start --reset-cache"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.24.0",
    "axios": "0.27.2",
    "invariant": "^2.2.4",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-crypto-js": "^1.0.0",
    "react-native-fs": "^2.20.0",
    "react-native-get-random-values": "^1.11.0",
    "react-native-html-to-pdf": "^0.12.0",
    "react-native-share": "^10.0.2",
    "react-native-vector-icons": "^9.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/cli": "12.3.6",
    "@react-native-community/cli-platform-android": "12.3.6",
    "@react-native-community/cli-platform-ios": "12.3.6",
    "@react-native/metro-config": "^0.83.1",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "metro-react-native-babel-preset": "^0.76.8",
    "prettier": "2.8.8",
    "react-native-gradle-plugin": "^0.71.19",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
